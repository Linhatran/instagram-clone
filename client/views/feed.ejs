    <div class="bg-light position-relative mt-5">
      <div
        class="container-fluid container-md px-0 px-sm-4 px-md-5"
        id="feed"
      ></div>
    </div>
    <script>
      //what needs to be done:
      //randomize usernames for feed
      //randomize user avis
      //add hearts, comments, airplanes, save/bookmarks
      //add like function and increase like counts
      //add comments CRUD
      //add "hours ago"

      $.get('https://image-server-codesmith.firebaseapp.com/images', function (
        data,
        status
      ) {
        data.forEach((url) => {
          $('#feed').append(
            `<div
          class="postContainer col-md-7 border px-0 mb-3"
          style="background-color: #fff"
        >
          <div class="d-flex flex-row">
            <div class="accounts col-10 flex-row d-flex">
              <div class="col-1 pl-0 mr-2">
                <svg
                  width="2rem"
                  height="2rem"
                  viewBox="0 0 16 16"
                  class="bi bi-person-circle mt-2"
                  fill="currentColor"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"
                  />
                  <path
                    fill-rule="evenodd"
                    d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
                  />
                  <path
                    fill-rule="evenodd"
                    d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"
                  />
                </svg>
              </div>
              <div class="col-10 pl-0">
                <p class="mt-2 pt-1">username</p>
                <!-- need to randomize this username -->
              </div>
            </div>
            <div class="col-2 text-right align-self-center">
              <svg
                width="1rem"
                height="1rem"
                viewBox="0 0 16 16"
                class="bi bi-three-dots"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"
                />
              </svg>
            </div>
          </div>

          <div class="post-img">
            <img
              src=${url}
              alt=""
              class="img-responsive"
              width="100%"
            />
          </div>
        </div>`
          );
          let img = $('img').last();
          $(img).on('error', function () {
            $(img).closest('.postContainer').remove();
          });
        });
      });
    </script>
